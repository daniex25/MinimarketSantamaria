@model MinimarketSantamaria.Models.Entidades.Ventas

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ventas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Sucursal</label>
                <select asp-for="IdSucursal" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Sucursal, "IdSucursal", "nombreSucursal"))">
                </select>
            </div>

            <div class="form-group">
                <label>Producto</label>
                <select asp-for="IdProducto" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Producto, "IdProducto", "nombreProducto"))">
                </select>
            </div>

            <div class="form-group">
                <label>UnidadMedida</label>
                <select asp-for="IdUnidadMedida" class="form-control"
                        asp-items="@(new SelectList(ViewBag.UnidadMedida, "IdUnidadMedida", "Nombre"))">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Registro" class="control-label"></label>
                <input asp-for="Registro" class="form-control" />
                <span asp-validation-for="Registro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaModificacion" class="control-label"></label>
                <input asp-for="FechaModificacion" class="form-control" />
                <span asp-validation-for="FechaModificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListadoVentas">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
